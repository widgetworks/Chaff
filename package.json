{
  "name": "@wiwo/chaff",
  "version": "0.1.0",
  "description": "Easy object mocking for Typescript (and Javascript)",
  "main": "Chaff.js",
  "scripts": {
    "build": "npm run build:lib && grunt uglify",
    "build:lib": "tsc -p src/Chaff/tsconfig.json",
    "build:test": "tsc -p src/tests/tsconfig.json",
    "build:all": "npm run build && npm run build:test",
    "build:grunt": "grunt typescript",
    "test": "mocha src/tests/tests.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/widgetworks/Chaff.git"
  },
  "keywords": [
    "Chaff",
    "Testing",
    "Mocking",
    "Mock",
    "Typescript"
  ],
  "author": "Adam Beck",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Gwash3189/Chaff/issues"
  },
  "homepage": "https://github.com/Gwash3189/Chaff",
  "devDependencies": {
    "expect": "^1.20.2",
    "grunt": "^1.0.1",
    "grunt-contrib-uglify": "^0.4.0",
    "grunt-contrib-watch": "^0.6.1",
    "grunt-typescript": "^0.8.0",
    "mocha": "^5.2.0",
    "typescript": "^3.0.3"
  }
}
